Constantize Form:
<%= form_tag(controller: "demos", action: "democonstantizevalidate", method: "post") do %>
	Choose what you would like to Edit:<br>
	<%= radio_button_tag(:type, "name") %>
	<%= label_tag(:type_name, "Name") %><br>
	<%= radio_button_tag(:type, "status") %>
	<%= label_tag(:type_status, "Status") %><br>
	<%= label_tag(:value, "Enter Value") %>
	<%= text_field_tag(:value) %><br>
	<%= submit_tag("Submit", :class => "btn btn-success") %>
<% end %>

